{% extends 'frontend/administration/base_admin.html.twig' %}

{% block body %}
    <h2>Customers</h2>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.id }}</td>
                <td>{{ customer.name }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
